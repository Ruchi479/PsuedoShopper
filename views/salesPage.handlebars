<h2>Items currently for sale!</h2>

  {{#if products.length}}
    <section class="container">
      {{#each products as |product|}}
        {{#if product.forSale}}
         <a href="product/{{id}}">    
            {{> productCard}}
              <p>Buy Now!</p>
            </div>
          </a>
        {{/if}}
      {{/each}}
    </section>
    {{else}}
    <h2>No Items currently for sale!</h2>
  {{/if}}
    
