<h3>Solo product route</h3>
<input type="hidden" id="product_id" name="product_id" value="{{product.id}}">
<input type="hidden" id="user_credits" name="user_credits" value="{{user.wallet.credits}}">
<input type="hidden" id="cost" name="cost" value="{{product.cost}}">
<input type="hidden" id="productOwner" name="productOwner" value="{{product.user_id}}">
<article class="productCard">
  
  <div >
    {{> productBuy}}
        
    {{#if (enough_credits user.wallet.credits product.cost)}}
    <button id="buyBtn">Buy it</button>
    {{else}}
    <p>Not enough money</p>
    <a href="/wallet"></a>
    {{/if}}
  </div>
</article>
<script src="/javascript/buy.js"></script>